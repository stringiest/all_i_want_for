<div class="card mx-auto text-center px-4 pt-4 pb-3 mt-5" style="width: 375px;">
  <%= form_for @list do |f| %>
    <%= f.label :name, 'List name' %>
    <%= f.text_field :name, class: "form-control mb-3" %>
    <%= f.label :event_date, 'Event date' %>
    <%= f.date_field :event_date, class: "form-control mb-3" %>
    <%= f.submit 'Submit', class: "btn btn-success" %>
  <% end %>
</div>
