<h1 class="text-center" style="font-weight: lighter;">Active Lists</h1>
<% @lists.reverse.each do |list| %>
  <div class="card mb-5 mx-auto" style="width: 80%;">
    <span class="card-header">
      <b>
        <%= list.user.username.capitalize %>
      </b>
      <i>
        created
        <%= time_ago_in_words(list.created_at) %> ago
      </i>
      <% if list.user == current_user %>
      <span style="float: right;">
        <%= link_to "Edit list", edit_list_path(list), class: "btn btn-primary" %>
        <%= link_to "Delete list", list_path(list), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?"} %>
      </span>
      <% end %>
    </span>
    <span class="d-inline-flex">
      <p class="text-justify m-2"><%= list.name %> - event date <%= list.event_date %></p>
    </span>
    <span class="card-footer">
      <% if list.user == current_user %>
        <%= link_to 'Add Gift', new_list_gift_path(list), class: "btn btn-primary" %>
      <% end %>
        <%= link_to 'View List', list_path(list), class: "btn btn-primary" %>
    </span>
  </div>
<% end %>
