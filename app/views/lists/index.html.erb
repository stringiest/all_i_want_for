<% @lists.reverse.each do |list| %>
  <div class="card mb-5 mx-auto" style="width: 80%;">
    <span class="card-header">
      <b>
        <%= list.user.username.capitalize %>
      </b>
      <i>
        created
        <%= time_ago_in_words(list.created_at) %> ago
      </i>
      <% if list.user == current_user %>
      <span style="float: right;">
        <%= link_to "Edit", edit_list_path(list) %>
        <%= link_to "Delete", list_path(list), method: :delete, data: { confirm: "Are you sure?"} %>
      </span>
      <% end %>
    </span>
    <span class="d-inline-flex">
      <p class="text-justify m-2"><%= list.name %> - event date <%= list.event_date %></p>
    </span>
    <span class="card-footer">

    </span>
  </div>
<% end %>
