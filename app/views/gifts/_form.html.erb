<div class="card mx-auto text-center px-4 pt-4 pb-3 mt-5" style="width: 375px;">
  <%= form_for [@list, @gift], url: list_gifts_path(@list, @gift) do |f| %>
    <%= f.label :name, 'Gift name' %>
    <%= f.text_field :name, class: "form-control mb-3" %>
    <%= f.label :url, 'url' %>
    <%= f.text_field :url, class: "form-control mb-3" %>
    <%= f.label :notes, 'Notes' %>
    <%= f.text_field :notes, class: "form-control mb-3" %>
    <%= f.submit 'Add Gift', class: "btn btn-success" %>
  <% end %>
</div>
