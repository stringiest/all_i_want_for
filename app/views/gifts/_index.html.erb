<% @list.gifts.reverse.each do |gift| %>
    <div class="card my-0.5 mx-auto" style="width: 98%;" id="gift-<%=gift.id%>">
      <span class="card-header">
        <p class="text-justify m-3"> <%= gift.name %></p>
        <% if @list.user == current_user %>
        <span style="float: right;">
          <%= link_to "Delete", list_gift_path(@list, gift), method: :delete, remote: true, data: { confirm: 'Are you sure you wish to delete this gift?' } %>
        </span>
        <% end %>
      </span>
      <span class="d-inline-flex">
        <p class="text-justify m-3"> <%= gift.url %></p>
        <p class="text-justify m-3"> <%= gift.notes %></p>
        <i>
          added
          <%= time_ago_in_words(gift.created_at) %> ago
        </i>
      </span>
    </div>
    <br>
  <% end %>