<% @list.gifts.reverse.each do |gift| %>
    <div class="card my-0.5 mx-auto" style="width: 98%;" id="gift-<%=gift.id%>">
      <span class="card-body">
        <h5 class="card-title"> <%= gift.name %></h5>
        <% if @list.user == current_user %>
        <span style="float: right;">
          <%= link_to "Remove gift", list_gift_path(@list, gift), method: :delete, remote: true, data: { confirm: 'Are you sure you wish to delete this gift?' } %>
        </span>
        <% end %>
        <h6 class="card-subtitle mb-2 text-muted">Notes: <%= gift.notes %></h6>
        <a href="<%= gift.url %>"><%= gift.url %></a>
      </span>

      <span class="card-footer">
        <i>
          added <%= time_ago_in_words(gift.created_at) %> ago
        </i>
      </span>
    </div>
    <br>
  <% end %>